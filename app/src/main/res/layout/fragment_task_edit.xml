<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="br.com.abraao.timesheet.TaskFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left|top"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/name_label"
            android:id="@+id/label_task_name"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="6dp"
            android:layout_gravity="start"
            />

        <EditText
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_task_name"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:inputType="text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/code_label"
            android:id="@+id/label_task_code"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="6dp" />

        <EditText
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_task_code"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:inputType="text" />

    </LinearLayout>

    <ImageButton
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/btn_save_task"
        android:background="@drawable/circle"
        android:elevation="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="64dp"
        android:layout_marginRight="16dp"
        android:layout_gravity="end|bottom"
        android:src="@android:drawable/ic_menu_save"
        />

    <ImageButton
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/btn_remove_task"
        android:background="@drawable/warnbtn"
        android:elevation="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="64dp"
        android:layout_marginLeft="16dp"
        android:layout_gravity="start|bottom"
        android:src="@android:drawable/ic_menu_delete"
        />

</FrameLayout>
